<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/measurement_listitem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_corner_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/measurement_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/doctor_image"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/measurementlistitem_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:paddingTop="@dimen/title_padding"
                android:textColor="@color/title"
                android:textSize="@dimen/title_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/measurement_thumbnail"
                android:layout_marginStart="11dp" />

            <TextView
                android:id="@+id/measurementlistitem_systolic"
                android:layout_width="@dimen/measurement_listitem_size"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:paddingTop="@dimen/title_padding"
                android:textColor="@color/title"
                android:textSize="@dimen/title_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@+id/measurementlistitem_date"
                android:layout_alignStart="@+id/measurementlistitem_date" />

            <TextView
                android:id="@+id/measurementlistitem_diastolic"
                android:layout_width="@dimen/measurement_listitem_size"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:paddingTop="@dimen/title_padding"
                android:textColor="@color/title"
                android:textSize="@dimen/title_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@+id/measurementlistitem_date"
                android:layout_toEndOf="@+id/measurementlistitem_systolic" />

            <TextView
                android:id="@+id/measurementlistitem_pulse"
                android:layout_width="@dimen/measurement_listitem_size"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:paddingTop="@dimen/title_padding"
                android:textColor="@color/title"
                android:textSize="@dimen/title_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@+id/measurementlistitem_systolic"
                android:layout_alignStart="@+id/measurementlistitem_date"/>

            <TextView
                android:id="@+id/measurementlistitem_temperature"
                android:layout_width="@dimen/measurement_listitem_size"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:paddingTop="@dimen/title_padding"
                android:textColor="@color/title"
                android:textSize="@dimen/title_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@+id/measurementlistitem_diastolic"
                android:layout_toEndOf="@+id/measurementlistitem_pulse"/>

            <TextView
                android:id="@+id/measurementlistitem_weight"
                android:layout_width="@dimen/measurement_listitem_size"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:paddingTop="@dimen/title_padding"
                android:textColor="@color/title"
                android:textSize="@dimen/title_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@+id/measurementlistitem_pulse"
                android:layout_alignStart="@+id/measurementlistitem_pulse" />


            <ImageView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/edit"
                android:clickable="true"
                android:paddingRight="10dp"
                android:scaleType="fitXY"
                android:layout_marginEnd="5dp"
                android:layout_below="@+id/measurementlistitem_temperature"
                android:layout_toStartOf="@+id/delete" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/delete_2"
                android:clickable="true"
                android:paddingRight="10dp"
                android:scaleType="fitXY"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/measurementlistitem_temperature" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>