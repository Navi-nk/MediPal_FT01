<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        app:cardCornerRadius="@dimen/card_corner_radius">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/doctor_image" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/thumbnail"
                android:paddingLeft="@dimen/left_padding"
                android:paddingRight="@dimen/title_padding"
                android:paddingTop="@dimen/title_padding"
                android:text="Title:"
                android:textStyle="bold"
                android:textColor="@color/title"
                android:textSize="@dimen/desc_size" />

            <TextView
                android:id="@+id/appointmenttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/title1"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/title_size" />
            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/appointmenttitle"
                android:paddingLeft="@dimen/left_padding"
                android:textStyle="bold"
                android:paddingRight="@dimen/title_padding"
                android:paddingTop="@dimen/title_padding"
                android:text="Date:"
                android:textColor="@color/title"
                android:textSize="@dimen/desc_size" />

            <TextView
                android:id="@+id/appointmentdatetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title2"
                android:paddingBottom="@dimen/datetime_bottom_padding"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/appointmentdatetime"
                android:paddingLeft="@dimen/left_padding"
                android:paddingRight="@dimen/title_padding"
                android:paddingTop="@dimen/title_padding"
                android:text="Clinic Location:"
                android:textStyle="bold"
                android:textColor="@color/title"
                android:textSize="@dimen/desc_size" />

            <TextView
                android:id="@+id/appointmentlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title3"
                android:paddingBottom="@dimen/bottom_padding"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/appointmentlocation"
                android:paddingLeft="@dimen/left_padding"
                android:paddingRight="@dimen/title_padding"
                android:paddingTop="@dimen/title_padding"
                android:textStyle="bold"
                android:text="Pre-Test Remainder:"
                android:textColor="@color/title"
                android:textSize="@dimen/desc_size" />

            <TextView
                android:id="@+id/appointmentremainder_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title4"
                android:paddingBottom="@dimen/bottom_padding"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/appointmentremainder_one"
                android:paddingLeft="@dimen/left_padding"
                android:textStyle="bold"
                android:paddingRight="@dimen/title_padding"
                android:paddingTop="@dimen/title_padding"
                android:text="Appointment Remainder:"
                android:textColor="@color/title"
                android:textSize="@dimen/desc_size" />

            <TextView
                android:id="@+id/appointmentremainder_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title5"
                android:paddingBottom="@dimen/bottom_padding"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/right_padding"

                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/title6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/appointmentremainder_two"
                android:paddingLeft="@dimen/left_padding"
                android:textStyle="bold"
                android:paddingRight="@dimen/title_padding"
                android:paddingTop="@dimen/title_padding"
                android:text="Description(Pre-Test Requirements):"
                android:textColor="@color/title"
                android:textSize="@dimen/desc_size" />

            <TextView
                android:id="@+id/appointmentdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title6"
                android:paddingBottom="@dimen/bottom_padding"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:textSize="@dimen/title_size" />

        </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>