<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/measurement_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="?attr/actionBarSize"
            android:focusableInTouchMode="true"
            >
            <TextView
                android:id="@+id/measurement_toolbartitle"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:text="Measurement"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:layout_gravity="center">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/measurement_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/measurement_edit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:focusable="false"
                android:hint="Date"
                android:inputType="none"
                android:theme="@style/EditTextStyle"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/measurement_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">
            <EditText
                android:id="@+id/measurement_edit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:ems="6"
                android:focusable="false"
                android:hint="Time"
                android:inputType="none"
                android:theme="@style/EditTextStyle" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/colorPrimaryLight"
                />
            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:text="Blood Pressure"
                android:textStyle="bold"
                android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/measurementsystolic_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextInputLayout.hint">
                <EditText
                    android:id="@+id/measurementsystolic_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:hint="Systolic"
                    android:inputType="number"
                    android:maxLength="3"
                    android:theme="@style/EditTextStyle"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/measurementdiastolic_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextInputLayout.hint">
                <EditText
                    android:id="@+id/measurementdiastolic_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:hint="Diastolic"
                    android:inputType="number"
                    android:maxLength="3"
                    android:theme="@style/EditTextStyle"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/colorPrimaryLight"
                />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/measurementpulse_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:hintTextAppearance="@style/TextInputLayout.hint">
            <EditText
                android:id="@+id/measurementpulse_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:hint="Pulse"
                android:inputType="number"
                android:maxLength="3"
                android:theme="@style/EditTextStyle"/>
        </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/colorPrimaryLight"
                />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/measurementtemperature_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:hintTextAppearance="@style/TextInputLayout.hint">
            <EditText
                android:id="@+id/measurementtemperature_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:hint="Temperature"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:digits="0123456789."
                android:theme="@style/EditTextStyle"/>
        </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/colorPrimaryLight"
                />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/measurementweight_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:hintTextAppearance="@style/TextInputLayout.hint">
            <EditText
                android:id="@+id/measurementweight_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:hint="Weight"
                android:inputType="number"
                android:maxLength="3"
                android:theme="@style/EditTextStyle"/>
        </android.support.design.widget.TextInputLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorPrimaryLight"
            />

        </LinearLayout>
     </ScrollView>

    </LinearLayout>
