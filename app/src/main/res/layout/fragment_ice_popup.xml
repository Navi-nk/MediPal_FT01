<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        app:cardCornerRadius="@dimen/card_corner_radius">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/doctor_image" />

                <TextView
                    android:id="@+id/ice_popup_nametitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/thumbnail"
                    android:paddingLeft="@dimen/left_padding"
                    android:paddingRight="@dimen/title_padding"
                    android:paddingTop="@dimen/title_padding"
                    android:text="Name :"
                    android:textStyle="bold"
                    android:textColor="@color/title"
                    android:textSize="@dimen/desc_size" />

                <TextView
                    android:id="@+id/ice_popup_nameview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ice_popup_nametitle"
                    android:paddingLeft="@dimen/title_padding"
                    android:paddingRight="@dimen/title_padding"
                    android:textSize="@dimen/title_size" />

                <TextView
                    android:id="@+id/ice_popup_contacttypetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ice_popup_nameview"
                    android:paddingLeft="@dimen/left_padding"
                    android:paddingRight="@dimen/title_padding"
                    android:paddingTop="@dimen/title_padding"
                    android:textStyle="bold"
                    android:text="Contact Type :"
                    android:textColor="@color/title"
                    android:textSize="@dimen/desc_size" />

                <TextView
                    android:id="@+id/ice_popup_contacttypeview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ice_popup_contacttypetitle"
                    android:paddingBottom="@dimen/datetime_bottom_padding"
                    android:paddingLeft="@dimen/title_padding"
                    android:paddingRight="@dimen/title_padding"
                    android:textSize="@dimen/title_size" />

                <TextView
                    android:id="@+id/ice_popup_contactnumbertitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ice_popup_contacttypeview"
                    android:paddingLeft="@dimen/left_padding"
                    android:paddingRight="@dimen/title_padding"
                    android:paddingTop="@dimen/title_padding"
                    android:text="Contact Number :"
                    android:textStyle="bold"
                    android:textColor="@color/title"
                    android:textSize="@dimen/desc_size" />

                <TextView
                    android:id="@+id/ice_popup_contactnumberview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ice_popup_contactnumbertitle"
                    android:paddingBottom="@dimen/bottom_padding"
                    android:paddingLeft="@dimen/title_padding"
                    android:paddingRight="@dimen/title_padding"
                    android:textSize="@dimen/title_size" />

                <TextView
                    android:id="@+id/ice_popup_descriptiontitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ice_popup_contactnumberview"
                    android:paddingLeft="@dimen/left_padding"
                    android:paddingRight="@dimen/title_padding"
                    android:paddingTop="@dimen/title_padding"
                    android:textStyle="bold"
                    android:text="Description :"
                    android:textColor="@color/title"
                    android:textSize="@dimen/desc_size" />

                <TextView
                    android:id="@+id/ice_popup_descriptionview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ice_popup_descriptiontitle"
                    android:paddingBottom="@dimen/bottom_padding"
                    android:paddingLeft="@dimen/title_padding"
                    android:paddingRight="@dimen/title_padding"
                    android:textSize="@dimen/title_size"
                    android:maxLines="4"
                    android:lines="4"/>

            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>