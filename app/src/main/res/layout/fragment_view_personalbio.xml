<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_pb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_pb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:elevation="3dp"
            app:cardCornerRadius="@dimen/card_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/user_icon" />

    <TextView
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/thumbnail"
        android:text="Name: "
        android:paddingLeft="@dimen/left_padding"
        android:paddingRight="@dimen/title_padding"
        android:paddingTop="@dimen/title_padding"
        android:textStyle="bold"
        android:textColor="@color/title"
        android:textSize="@dimen/desc_size"
        />

    <TextView
        android:id="@+id/nameVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameView"
        android:paddingLeft="@dimen/title_padding"
        android:paddingRight="@dimen/title_padding"
        android:textSize="@dimen/title_size"
        />

    <TextView
        android:id="@+id/dobView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameVal"
        android:paddingLeft="@dimen/left_padding"
        android:textStyle="bold"
        android:paddingRight="@dimen/title_padding"
        android:paddingTop="@dimen/title_padding"
        android:text="DOB:"
        android:textColor="@color/title"
        android:textSize="@dimen/desc_size"
        />

    <TextView
        android:id="@+id/dobVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dobView"
        android:paddingBottom="@dimen/datetime_bottom_padding"
        android:paddingLeft="@dimen/title_padding"
        android:paddingRight="@dimen/title_padding"
        android:textSize="@dimen/title_size"
        />

    <TextView
        android:id="@+id/idNoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dobVal"
        android:paddingLeft="@dimen/left_padding"
        android:paddingRight="@dimen/title_padding"
        android:paddingTop="@dimen/title_padding"
        android:text="ID Number: "
        android:textStyle="bold"
        android:textColor="@color/title"
        android:textSize="@dimen/desc_size"
        />

    <TextView
        android:id="@+id/idNoVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idNoView"
        android:paddingBottom="@dimen/bottom_padding"
        android:paddingLeft="@dimen/title_padding"
        android:paddingRight="@dimen/title_padding"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/addressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:layout_below="@id/idNoVal"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/left_padding"
        android:paddingRight="@dimen/title_padding"
        android:paddingTop="@dimen/title_padding"
        android:textStyle="bold"
        android:textColor="@color/title"
        android:textSize="@dimen/desc_size"
        />

    <TextView
        android:id="@+id/addressVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressView"
        android:paddingBottom="@dimen/bottom_padding"
        android:paddingLeft="@dimen/title_padding"
        android:paddingRight="@dimen/title_padding"
        android:textSize="@dimen/title_size"/>

    <TextView
        android:id="@+id/postalView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postal Code: "
        android:layout_below="@id/addressVal"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/left_padding"
        android:textStyle="bold"
        android:paddingRight="@dimen/title_padding"
        android:paddingTop="@dimen/title_padding"
        android:textColor="@color/title"
        android:textSize="@dimen/desc_size"
        />

    <TextView
        android:id="@+id/postalVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/postalView"
        android:paddingBottom="@dimen/bottom_padding"
        android:paddingLeft="@dimen/title_padding"
        android:paddingRight="@dimen/right_padding"
        android:textSize="@dimen/title_size"/>

    <TextView
        android:id="@+id/heightView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/postalVal"
        android:paddingLeft="@dimen/left_padding"
        android:textStyle="bold"
        android:paddingRight="@dimen/title_padding"
        android:paddingTop="@dimen/title_padding"
        android:text="Height: "
        android:textColor="@color/title"
        android:textSize="@dimen/desc_size"
        />

    <TextView
        android:id="@+id/heightVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heightView"
        android:paddingBottom="@dimen/bottom_padding"
        android:paddingLeft="@dimen/title_padding"
        android:paddingRight="@dimen/right_padding"
        android:textSize="@dimen/title_size"/>

    <TextView
        android:id="@+id/bloodTypeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/heightVal"
        android:paddingLeft="@dimen/left_padding"
        android:textStyle="bold"
        android:paddingRight="@dimen/title_padding"
        android:paddingTop="@dimen/title_padding"
        android:text="Blood Type: "
        android:textColor="@color/title"
        android:textSize="@dimen/desc_size"
        />

    <TextView
        android:id="@+id/bloodTypeVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bloodTypeView"
        android:paddingBottom="@dimen/bottom_padding"
        android:paddingLeft="@dimen/title_padding"
        android:paddingRight="@dimen/title_padding"
        android:textSize="@dimen/title_size"/>

    </RelativeLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/edit_fab" />
</android.support.design.widget.CoordinatorLayout>