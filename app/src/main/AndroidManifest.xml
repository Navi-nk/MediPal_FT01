<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.edu.nus.iss.medipal">
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AddEditPersonalBioActivity"
            android:label="Personal Bio"
            android:parentActivityName=".activity.AddEditPersonalBioActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activity.AddEditHealthBioActivity"
            android:label="Health Bio"
            android:parentActivityName=".activity.AddEditHealthBioActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activity.MedicineActivity"
            android:label="@string/title_activity_medicine"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AddMedicineActivity"
            android:label="AddMedicine"
            android:parentActivityName=".activity.MedicineActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.AddCategoryActivity"
            android:label="AddCategory"
            android:parentActivityName=".activity.MedicineActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity android:name=".activity.AddAppointmentActivity"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <receiver android:name="sg.edu.nus.iss.medipal.service.RemindAlarmReceiver">
        </receiver>
    </application>
</manifest>